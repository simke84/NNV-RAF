                        <div style="color:azure;">@Html.LabelFor(model => model.Korisnicko_ime) </div>

                        @Html.EditorFor(model => model.Korisnicko_ime)

                        <div style="height: 20px;color:white;font-size:inherit;font-weight:100;font-family:'Times New Roman', Times, serif">
