
@model NNV.Models.Clanovi

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>ПРВА</title>

    <style>
        .form-group {
            width: 200px;
            position: center;
        }


        body {
            background-image: url('/SLIKE/KnjigeFokus (1).jpg');
            background-repeat: no-repeat;
            background-position: center;
            width: 100%;
            height: auto;
            background-size: cover;
            background-size: contain;
        }




        #gkCopyrights {
            position: fixed;
            left: 0;
            bottom: 15px;
            margin-bottom: 0px;
            width: 100%;
            height: auto;
            background-color: lightgray;
            color: black;
            text-align: center;
        }

        background {
            opacity: 0.7;
        }


        .gkPage {
            max-width: 1200px;
        }


        .gkPage {
            max-width: 1200px;
        }

        .login {
            padding: 15px;
            width: 400px;
            min-height: 400px;
            margin: 2% auto 0 auto;
        }


        body {
            background: transparent;
        }

        body, input, button {
            font-family: 'Source Sans Pro', sans-serif;
        }


        h2 {
            font-size: 3em;
            font-weight: 300;
            color: rgba(255, 255, 255, 0.7);
            display: inline-block;
            padding-bottom: 5px;
            text-shadow: 1px 1px 3px;
        }



        .input-group {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>






</head>


<body style="background-image:url('/SLIKE/KnjigeFokus (1).jpg');background-size:100%;background-size:cover;">



    <h2>
        ПРИЈАВИ СЕ
    </h2>
    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true)


        <div style="border: solid 1px #ccc; padding: 30px 0 30px 30px; border-radius: 5px;
        width: 325px; margin: auto; display: table;">
            <table>
                <tr>
                    <td valign="top"></td>
                    <td>
                        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
