                        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                    </td>
                    <td>
                        <div style="color:azure;">@Html.LabelFor(model => model.Lozinka)</div>

                        @Html.EditorFor(model => model.Lozinka)
