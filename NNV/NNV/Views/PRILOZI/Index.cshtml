


@using PagedList;  @*novi vju sa pagging, sort,search*@

@using PagedList.Mvc;

@model IPagedList<NNV.Models.Prilozi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Lejaut3.cshtml";
}

<!DOCTYPE html>

<html>



<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


</head>

<body>


    @using (Html.BeginForm("Index", "PRILOZI", FormMethod.Get))
    {

        <b>Изаберите: </b>@Html.RadioButton("option", "Datum") <text>Назив документа</text> @Html.RadioButton("option", "Ucionica") <text> Број седнице </text> @Html.TextBox("search")

        <input type="submit" name="submit" value="ПРЕТРАГА" /><br /><br /> <button type="button" onclick="location.href='@Url.Action("Index","PRILOZI")'">ПРИКАЖИ СВЕ</button>


    }
    <br /><br />
    <table class="table"
           border="1">
        <tr>
            <th>
                @Html.ActionLink("Назив документа < >", "Index", new
           {
               sort = ViewBag.SortByName,
               option = Request.QueryString["option"],
               search = Request.QueryString["search"]
           })
            </th>
            <th>
                @Html.ActionLink("Број седнице < >", "Index", new { sort = ViewBag.SortByGender, option = Request.QueryString["option"], search = Request.QueryString["search"] })
            </th>


            <th> @Html.DisplayNameFor(model => model.First().Poslato) </th>
            <th> @Html.DisplayNameFor(model => model.First().Putanja) </th>
            <th> @Html.DisplayNameFor(model => model.First().Datum_slanja) </th>



        </tr>


        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3"> Records not found </td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr>
                    <td><div class="col-md-2 ">  @Html.DisplayFor(modelItem => item.Dokumentacijas.Naziv_Dokumenta) </div></td>
                    <td>
                        <div class="col-md-2 ">  @Html.DisplayFor(modelItem => item.ID_Sednice) </div>
                    </td>
                    <td> <div class="col-md-2 "> @Html.DisplayFor(modelItem => item.Poslato) </div></td>
                    <td>
                        <div class="col-md-2">@Html.DisplayFor(modelItem => item.Putanja)</div>
                    </td>
                    <td>
                        <div class="col-md-2 ">   @Html.DisplayFor(modelItem => item.Datum_slanja)</div>
                    </td>
                    @* <td>
                            <div class="col-md-2 "> @Html.DisplayFor(modelItem => item.Poziv)    </div>
                        </td>*@

                </tr>
            }
        }
    </table>



    <div style="margin-bottom:28px">
        @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new
{
  pageNumber,
  option = Request.QueryString["option"],
  search = Request.QueryString["search"],
  sort = Request.QueryString["sort"]
}))
    </div>


</body>
</html>



































