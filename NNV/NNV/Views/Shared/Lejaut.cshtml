
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>ННВ</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <title>@ViewBag.Title -СЕДНИЦЕ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <style>


        .tabela {
            margin-left: 203px;
            padding: 150px;
            margin-top: 30px;
            margin-bottom: 90px;
            padding: inherit;
            z-index: 1;
            margin-right: 0px;
        }

        .levo {
            margin-bottom: 400px;
        }

        .sidebar {
            height: 100%;
            width: 40px;
            position: fixed !important;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: lightgray;
            overflow-x: hidden;
            padding-top: 20px;
            margin-top: 100px;
            opacity: 0.5;
            min-width: 200px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 14px;
                color: #1e90ff;
                display: block;
            }

                .sidebar a:hover {
                    color: #e62e00;
                }



        .futer {
            position: absolute;
            right: 0;
            left: 0;
            padding: 1rem;
            bottom: 0;
            width: 100%;
            background-color: lightgray;
            text-align: center;
            color: black;
            z-index: 1;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            padding: 0px;
        }












        /* Style the footer */
        footer {
            background-color: #777;
            padding: 10px;
            text-align: center;
            color: white;
        }

        .pill-nav {
            width: 200px;
        }

            .pill-nav a {
                display: block;
                color: black;
                padding: 14px;
                text-decoration: none;
                font-size: 14px;
                border-radius: 5px;
            }

                .pill-nav a:hover {
                    background-color: #ddd;
                    color: black;
                    width: auto;
                }

                .pill-nav a.active {
                    background-color: dodgerblue;
                    color: white;
                }
    </style>
</head>
<body>
    <header style="margin-top:0px!important;padding:10px!important; width:50%;"><img src="~/SLIKE/logo_cir.png" style="height:100%;width:100%;"></header>





    <!-- Sidebar -->
    <div class="sidebar" style="width:15%" ; margin-left:25%;>
        <h3 class="w3-bar-item"></h3>



        <ul>
            <li>
                <a href="#" class="w3-bar-item w3-button"><div>@Html.ActionLink("СЕДНИЦЕ", "Index", "SEDNICE")</div></a>
            </li>
            <br\>
                <br\>

                    <li>
                        <a href="#" class="w3-bar-item w3-button"><div>@Html.ActionLink("ЧЛАНОВИ", "Index", "CLANOVI")</div></a>
                    </li><br\>
                        <br\>
                            <li>
                                <a href="#" class="w3-bar-item w3-button"><div>@Html.ActionLink("ПРИЛОЗИ", "Index", "PRILOZI")</div></a>
                            </li><br\>
                                <br\>
                                    <li>
                                        <a href="#" class="w3-bar-item w3-button">АДМИН</a>
                                    </li><br\>
                                        <br\>
                                            <li>
                                                <a href="#" class="w3-bar-item w3-button">РЕГИСТРАЦИЈА</a>
                                            </li>





        </ul>

    </div>


    <div class="tabela">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>


    <footer class="futer" style="margin-top:0px!important;">
        <p> &copy; 2003-2018 Рачунарски факултет - Београд</p>
    </footer>

</body>
</html>






